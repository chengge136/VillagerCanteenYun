<view class="form">
  <van-cell-group>
    <van-field value="{{ name }}" bind:input="inputName" required label="姓名" disabled />
    <van-field value="{{ phone }}" type="number" bind:input="inputPhone" required clearable label="手机号" placeholder="手机号码用于，系统登录使用，配送联络" />
    <van-field value="{{ notlike }}" bind:input="inputNotlike" required clearable label="忌口信息" placeholder="例如：不吃香菜" />
  </van-cell-group>
</view>
<view class="button-sp-area">
<view class="button"><button type="primary" plain="true" bindtap="updateuser">更新数据</button></view>
<view class="button"><button type="warn" plain="true" bindtap="deleteuser">删除用户</button></view>
</view>