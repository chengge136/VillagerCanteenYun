page{
  height: 100%;
  background-size:100%;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
  background-color: #F7F7F7;
} 

.title{
  position:relative;
  top:50rpx;
  right:35%;
  font-size: 40rpx;
}


.login-from {
  margin-top: 90px;
  flex: auto;
  height:100%;
  width:80%;
}
.myno{
  height: 80rpx;
  margin: 0 auto;
  border:1px solid #ccc;
  border-radius: 50rpx;
  background-color: #FFFFFE;
 
}
.mypwd{
  height: 80rpx;
  margin: 0 auto;
  border:1px solid #ccc;
  border-radius: 50rpx;
  margin-top: 20rpx;
  background-color: #FFFFFE;
}
.weui-input{
   display:flex; /* 伸缩盒子，调整其子元素在不同的屏幕大小中能够用最适合的方法填充合适的空间 */
   flex-wrap:wrap; /* 换行 */
   padding: 10rpx; /* 边距 */
   margin-left:20rpx;   
}

.button {
    border-radius: 80rpx;
    margin: 70rpx 50rpx;
    font-size: 32rpx;
    width:80%;
    position: relative;
    top:10%;
}

.register{
    font-size: 28rpx;
    text-align:center;
    display: flex;
    flex-direction: column;
    justify-content: space-between; 
    padding: 10rpx;
    height: 150rpx;
    position: relative;
    top:15%;
}