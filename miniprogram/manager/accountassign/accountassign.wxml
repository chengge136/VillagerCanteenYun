<van-tabs active="{{acivetab}}">
  <van-tab title="账户分配" name="0">
    <view>
      <van-cell-group>
        <van-field value="{{ name }}" bind:input="inputName" required clearable label="姓名" placeholder="请输入姓名" />
        <van-field value="{{ phone }}" type="number" bind:input="inputPhone" required clearable label="手机号" placeholder="手机号码用于，系统登录使用，亦用于联络" />
        <view style="margin:20rpx;">
          <van-radio-group value="{{ radio }}" bind:change="onChange">
            <van-radio name="1">站点管理员</van-radio>
            <van-radio name="2">食堂管理员</van-radio>
            <van-radio name="3">财务管理员</van-radio>
          </van-radio-group>
        </view>
        <view wx:if="{{radio==2 || radio==3}}"><van-field value="{{ address }}" bind:input="inputAddress" required clearable label="食堂地址" placeholder="输入食堂名称地址，例如碧湖镇村民食堂"/></view>
        <view wx:if="{{radio==1}}"><van-field value="{{ address }}" bind:input="inputAddress" required clearable label="站点地址" placeholder="请输入站点地址"/></view>
      <van-field value="{{ password }}" bind:input="inputPWD" type="password" label="密码" placeholder="请输入密码" required clearable />
    <van-field value="{{ repassword }}" bind:input="inputREPWD" type="password" label="再次输入密码" placeholder="请再次输入密码" required clearable />
      </van-cell-group>
  <view class="submit">
  <van-button disabled="{{disabled}}" bind:click="register" type="info" round size="large">注册</van-button>
</view>

    </view>


  </van-tab>
  <van-tab title="站点管理员" name="1">


  </van-tab>
  <van-tab title="食堂管理员" name="2">

  </van-tab>
  <van-tab title="财务管理员" name="3">

  </van-tab>
  <van-notify id="van-notify" />
</van-tabs>