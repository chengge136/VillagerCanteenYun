<view class="J-shopping-cart-empty" hidden="{{!isempty}}">
  <i class="fa fa-shopping-cart fa-5x"></i>
  <text style='color:black'>暂无新订单</text>
</view>

<view hidden="{{isempty}}">
<view class="line_y">
<view class="text1">
<text>今日有效订单</text>
<text>今日营业额</text>
</view>
<view class="text2">
<text>{{ordercount}}</text>
<text>{{total}}</text>
</view>
</view>

<view class="tc">
<view><text>菜品统计：</text></view>
<view class="item" wx:for="{{menulists}}" wx:key="index">
{{item.name}}：<text style="color:red;font-size:35rpx;"> {{item.count}} </text>份
</view>
</view>

<view class="button">
  <van-button type="info" block bind:click="approve" disabled='{{disabled}}'>审核通过</van-button>
</view>
</view>