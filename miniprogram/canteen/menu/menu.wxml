<van-tabs active="{{ active }}">
  <van-tab title="套餐管理">

    <van-cell-group>
      <van-field required clearable type="number" value="{{ price }}" placeholder="输入老人实惠套餐价格" label="实惠套餐价格" bind:change="inputPrice"/>
    </van-cell-group>
<view class="button">
<van-button type="info" block>更新</van-button>
</view>
  </van-tab>

  <van-tab title="单个菜品">
  
  <van-nav-bar
  title="菜品管理"
  left-text="返回"
  right-text="添加菜品"
  left-arrow
  bind:click-left="onClickLeft"
  bind:click-right="onClickRight"
/>

  <van-grid column-num="3">
  <view class="item"  wx:for="{{menulists}}" wx:key="index">
    <navigator url="../modifymenu/modifymenu?id={{item._id}}">
    <van-grid-item use-slot>
    <image
      style="width: 100%; height: 90px;"
      src="{{item.img}}"
    />
    <text>{{item.name}}\n（￥{{item.price}}）</text>
  </van-grid-item>

      
    </navigator>
  </view>
  </van-grid>

  
  </van-tab>
</van-tabs>